#!/usr/bin/env ruby

require 'optparse'
require File.join(File.expand_path(File.dirname(__FILE__)), '..', 'lib', 'sunspot', 'installer')

home = ARGV.select { |arg| arg !~ /^-/ }.last
abort("You must specify a solr-home. (e.g. \"./solr\")") unless home
options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: sunspot-installer [options] solr-home"
  opts.on('-v', '--[no-]verbose', 'Run verbosely') do |v|
    options[:verbose] = v
  end
  opts.on('-f', '--[no-]force', 'Overwrite schema and solrconfig files with Sunspot default, instead of modifying them (recommended for new Solr installation)') do |f|
    options[:force] = f
  end
end.parse!

Sunspot::Installer.execute(home, options)
